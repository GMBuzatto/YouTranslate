{
  "name": "youtranslate",
  "version": "1.0.0",
  "description": "Automatic video translator: add Portuguese subtitles to English speech effortlessly",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:watch": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GMBuzatto/YouTranslate.git"
  },
  "keywords": [
    "video",
    "translation",
    "subtitles",
    "portuguese",
    "english",
    "automatic",
    "ai",
    "typescript",
    "node"
  ],
  "author": "GMBuzatto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GMBuzatto/YouTranslate/issues"
  },
  "homepage": "https://github.com/GMBuzatto/YouTranslate#readme",
  "dependencies": {
    "@distube/ytdl-core": "^4.16.10",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.2.0",
    "groq-sdk": "^0.22.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/fs-extra": "^11.0.4",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "nodemon": "^3.0.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
